<core:FragmentDefinition xmlns="sap.m" xmlns:form="sap.ui.layout.form" xmlns:core="sap.ui.core" xmlns:b="sap.suite.ui.commons"
    xmlns:u="sap.ui.unified">
    <Dialog class="sapUiPopupWithPadding sapUiSizeCompact" title="{i18n>fileImportDialogTitle}" resizable="false" draggable="false" showHeader="true"
        horizontalScrolling="false" contentWidth="470px" core:require="{controller: 'com/knpl/tss/tssportal/ext/controller/ListReportCustomController'}">
        <content>
            <FormattedText htmlText="{i18n>fileInstructionHTML}"/>
            <form:SimpleForm>
                <form:content>
                    <u:FileUploader id="fupImport" name="myFileUpload" tooltip="{i18n>fileUploaderTooltip}" width="100%" uploadComplete="controller.handleUploadComplete" style="Emphasized"
                typeMissmatch="controller.onUploadFileTypeMis"  fileType="csv" placeholder="{i18n>fileUploaderPlaceholder}" sendXHR="true" useMultipart="false"/>
                </form:content>
            </form:SimpleForm>
        </content>
        <buttons>
            <Button text="{i18n>fileUploadConfirmBtnTxt}" type="Emphasized" id="btnUploadConfirm" press="controller.handleUploadPress"/>
            <Button text="{i18n>fileUploadCancelBtnTxt}" id="btnCancel" press="controller.handleCancelPress"/>
        </buttons>
    </Dialog>
</core:FragmentDefinition>